# Sentinel Guard Environment Variables
# Copy this file to .env.local and fill in your actual values

# VirusTotal API Configuration
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Sentinel Guard
NEXT_PUBLIC_APP_VERSION=0.1.0

# Electron Configuration
ELECTRON_IS_DEV=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true

# Security Configuration
ENABLE_QUARANTINE=true
MAX_FILE_SIZE_MB=100
SCAN_TIMEOUT_SECONDS=30

# UI Configuration
DEFAULT_THEME=system
ENABLE_ANIMATIONS=true

# Development Configuration (Development only)
NEXT_PUBLIC_DEBUG_MODE=false
ENABLE_DEV_TOOLS=true

# API Rate Limiting
VIRUSTOTAL_REQUESTS_PER_MINUTE=4
VIRUSTOTAL_REQUESTS_PER_DAY=1000

# File Monitoring
MONITOR_DOWNLOADS_FOLDER=true
MONITOR_CUSTOM_FOLDERS=false
CUSTOM_MONITOR_PATHS=

# Notifications
ENABLE_SYSTEM_NOTIFICATIONS=true
ENABLE_SOUND_NOTIFICATIONS=false

# Data Storage
USER_DATA_PATH=
QUARANTINE_PATH=
SCAN_LOGS_PATH=

# Advanced Settings
ENABLE_REAL_TIME_PROTECTION=true
AUTO_SCAN_NEW_FILES=true
DEEP_SCAN_MODE=false
