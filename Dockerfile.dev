# Development Dockerfile for Sentinel Guard
FROM node:24-alpine

# Install system dependencies
RUN apk add --no-cache libc6-compat

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Create necessary directories
RUN mkdir -p quarantine logs app-data user-data

# Expose ports
EXPOSE 3000 9229

# Set environment variables
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

# Default command
CMD ["npm", "run", "dev"]
